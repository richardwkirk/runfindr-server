{
  "compileOnSave": true,
    "compilerOptions": {
      "target": "es6",
      "module": "commonjs",
      "moduleResolution": "node",
      "outDir": "dist",
      "sourceMap": true,
      "allowJs": true,
      "resolveJsonModule": true
    },
    "files": [
      "src/index.ts"
    ],
    "include": [
      "src/**/*.ts",
      "src/**/*.js"
    ],
    "exclude": [
      "node_modules"
    ]
  }